<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biz.markgo.senior_project.tracksharelocations.ChooseLoginActivity"
    android:background="#1695A3"
    android:elevation="19dp"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/logo"
            android:id="@+id/im_logo"
            android:layout_height="230dp"
            android:layout_weight="0.11"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" />

    <!--   <Button
            android:text="เข้าสู่ระบบด้วย Facebook"
            android:layout_width="match_parent"
            android:id="@+id/bt_loginFacebook"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/face"
            android:textColor="#FFFFFA"
            android:padding="10dp"
            android:textStyle="normal|bold"
            android:layout_height="50dp"
            android:layout_weight="0.07"
            android:layout_marginTop="60dp" />-->

        <!--facebook:com_facebook_confirm_logout="false"
           facebook:com_facebook_tooltip_mode="never_display"-->

        <com.facebook.login.widget.LoginButton
            android:id="@+id/bt_loginFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20sp"
            android:text="เข้าสู่ระบบด้วย Facebook"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:text="หรือ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_or"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal|bold" />


        <Button
            android:text="เข้าสู่ระบบด้วย Google+"
            android:layout_width="match_parent"
            android:id="@+id/bt_loginGoogle"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/google"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFA"
            android:padding="10dp"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_height="46dp" />

        <TextView
            android:text="ข้าม"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_loginNo"
            android:textSize="20sp"
            android:textStyle="normal|bold|italic"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_gravity="right" />



    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biz.markgo.senior_project.tracksharelocations.Login.DetailRegisterActivity"
    android:background="#1695A3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="237dp"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/im_profile_detail"
                android:layout_marginTop="30dp" />
            <Button
                android:layout_below="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เปลียนรูปภาพ"
                android:id="@+id/selectImage"/>

            <TextView
                android:text="ไอดีผู้ใช้"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_followID"
                android:hint="ไอดีผู้ใช้"
                android:background="#FDF6FF"
                android:textSize="18sp"
                android:padding="15dp" />

            <TextView
                android:text="ชื่อ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_FirstName"
                android:hint="ชื่อ"
                android:background="#FDF6FF"
                android:textSize="18sp"
                android:padding="15dp" />

            <TextView
                android:text="นามสกุล"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_LastName"
                android:hint="นามสกุล"
                android:background="#FDF6FF"
                android:textSize="18sp"
                android:padding="15dp" />


            <TextView
                android:text="อีเมล"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_Email"
                android:hint="อีเมล"
                android:background="#FDF6FF"
                android:textSize="18sp"
                android:padding="15dp" />


            <Button
                android:text="ตกลง"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_next_detail"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:padding="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="#FFCA13" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

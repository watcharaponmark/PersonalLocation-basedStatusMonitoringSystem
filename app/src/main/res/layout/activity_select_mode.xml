<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.markgo.senior_project.tracksharelocations.Begin.SelectModeActivity"
    android:background="@drawable/background_design5">

    <!--1695A3-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hade_ber"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_select_mode"
        app:titleTextColor="@android:color/white"
        app:title="เลือกโหมดการใช้งาน"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1"
        android:layout_below="@+id/toolbar_select_mode">


        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:text="ติดตามบุคคล"
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:id="@+id/bt_traking_farg_home"
            app:cub_border_radius="3dp"
            app:cub_color="@color/app_bar_place_traking_background"
            app:cub_hover_color="#323333"
            android:layout_marginTop="20dp" />

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:text="กำหนด\nสถานะของฉัน"
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:id="@+id/bt_SettingStatus_farg_home"
            app:cub_border_radius="3dp"
            app:cub_color="@color/app_bar_place_status_background"
            app:cub_hover_color="#323333"
            android:layout_marginTop="10dp" />



<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.markgo.senior_project.tracksharelocations.Traking.Nav_Fagment.PlaceTracking.PlaceSecretFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_weight="0.20" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/CV_exit"
            android:layout_height="121dp"
            app:cardBackgroundColor="@color/place_status_my_head">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15.93">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView4"
                        app:srcCompat="@drawable/makker_location" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ชื่อสถานที่"
                        android:id="@+id/tv_name_placeAll"
                        android:layout_weight="4.03"
                        android:gravity="center_vertical"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_above="@+id/imageView2"
                        android:layout_alignLeft="@+id/imageView2"
                        android:layout_alignStart="@+id/imageView2"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp" />


                </LinearLayout>

                <TextView
                    android:text="ที่อยู่"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:id="@+id/tv_addra"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:text="ติดตาม"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_traking"
                android:layout_gravity="center_vertical|center_horizontal" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>

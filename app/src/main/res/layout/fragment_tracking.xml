<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.markgo.senior_project.tracksharelocations.Nav_Fragment.TrackingFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal"
        android:background="#034E57"
        android:elevation="24dp">

        <TextView
            android:layout_width="289dp"
            android:layout_height="33dp"
            android:text="การติดตาม่ของคุณ"
            android:layout_weight="0.47"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:text="เพิ่ม"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_newtracking"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#F2CD50" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_place"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
    </ListView>

    </LinearLayout>

</FrameLayout>
